<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/def_pagePadding"
    android:background="@drawable/backgroundcool"
    tools:context="com.sportify.placeReview.activity.PlaceReviewActivity">

    <TextView
        android:id="@+id/reviewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@color/colorCrystalWhite"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:text="@string/review_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:numStars="5"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_above="@+id/reviewText"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/reviewText"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="@string/review_descriptionbox"
        android:gravity="top"
        android:padding="11dp"
        android:lines="2"
        android:textSize="14dp"
        android:inputType="textMultiLine"
        tools:ignore="LabelFor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.723"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/commentHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButton"
        android:onClick="submit"
        android:textColor="@color/buttonDark"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:text="@string/submit_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.962"
        app:layout_constraintHorizontal_bias="0.46" />

    <TextView
        android:id="@+id/commentHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_write"
        android:textColor="@color/colorPrimaryDarkGrey"
        android:textSize="14dp"
        android:drawableRight="@drawable/fotbolliconnew"
        android:drawablePadding="10dp"
        android:fontFamily="serif"
        android:layout_marginEnd="32dp"

        android:layout_above="@+id/submitButton"
        android:layout_alignEnd="@+id/reviewText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintVertical_bias="0.821" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="650dp"
        android:layout_height="210dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@drawable/placefarsta"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/ratingBar"
        android:layout_alignParentStart="true" />
</android.support.constraint.ConstraintLayout>