<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/dialog_Fragment_friend_request"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnYesDialogFragment"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_yes"
            android:background="#00CC66"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnNoDialogFragment"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment_no"
            android:background="#FF3333"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_margin="5dp" />

    </LinearLayout>
</LinearLayout>