<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcool"
    tools:context="com.sportify.settings.activity.SettingsActivity"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_sett"
        android:textSize="25sp"
        android:textColor="@color/colorCrystalWhite"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/settingsInviteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_invite"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settingsText"
        android:layout_marginTop="50dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/settingsInviteFBFriendsButton"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settingsInviteFBFriendsButton"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/chevright"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/settingsInviteText"
        android:layout_alignParentEnd="true" />



    <TextView
        android:id="@+id/settInviteFBFriendsText"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="@string/settings_fb_friends"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/settingsInviteText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/settingsFindFriendsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_friends"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/settingsInviteFBFriendsButton"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/settingsFindFBButtons"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settingsFindFBButtons"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/chevright"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/settingsFindFriendsText"/>


    <TextView
        android:id="@+id/settFindFBText"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="@string/settings_fb_friends"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/settingsFindFriendsText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"/>


    <TextView
        android:id="@+id/settingsAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_account"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settingsFindFBButtons"
        android:layout_marginTop="30dp"/>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/changePassButton"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/chevright"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/settingsAccountText"
        android:layout_marginTop="6dp"/>



    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/settChangePassText"/>

    <TextView
        android:id="@+id/settChangePassText"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="@string/settings_change_password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/settingsAccountText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/accountSettingButton"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/chevright"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/changePassButton"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/settSettingsText"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="@string/settings_account_settings"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/changePassButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settingsEditProfileButton"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/chevright"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/accountSettingButton"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/settEditProfileText"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="@string/settings_edit_profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:layout_below="@+id/accountSettingButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/settingsSupportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_support"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accountSettingButton"
        android:layout_marginTop="60dp"/>



    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/integrityButton"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/integrityButton"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/chevright"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/settingsSupportText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/settIntegText"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="@string/settings_integrity"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/settingsSupportText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/integrityButton"
        android:layout_marginTop="49dp"
        android:background="@color/colorButton"
        android:layout_centerHorizontal="true"
        android:text="@string/settings_log_out"
        android:textColor="@color/colorPrimaryDarkGrey"
        android:textStyle="italic"/>


