<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sportify.maps.activity.MapsActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/etMapsSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_light_disabled"
                android:ems="10"
                android:hint="Event/Place/Intresse"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <Button
                android:id="@+id/mapsSearchButton"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="Go"
                android:onClick="showPlaceByName"/>

        </LinearLayout>

        <!--<AutoCompleteTextView-->
            <!--android:id="@+id/etEnterCategory"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:hint="@string/enter_category" />-->

        <ListView
            android:id="@+id/mapsListView"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:background="@color/colorPrimaryDarkGrey"
            android:entries="@array/sections" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.sportify.maps.activity.MapsActivity" />


    </LinearLayout>

</RelativeLayout>
