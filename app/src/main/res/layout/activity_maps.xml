<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sportify.maps.activity.MapsActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            tools:context="com.sportify.maps.activity.MapsActivity"
            android:layout_weight="0.39" />

        <ListView
            android:id="@+id/mapsListView"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:entries="@array/sections"
            android:layout_weight="0.30" />

        <!--<AutoCompleteTextView-->
            <!--android:id="@+id/etEnterCategory"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:hint="@string/enter_category" />-->

        <TextView
            android:id="@+id/twCategoryChosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.14" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="showCategory"
            android:text="Go" />

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/mapLoadIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicatorName="PacmanIndicator" />

</RelativeLayout>
